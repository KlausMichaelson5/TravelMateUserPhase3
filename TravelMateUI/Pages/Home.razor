@page "/"
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Mate - Your Ultimate Travel Companion</title>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="icon" href="https://cdn.example.com/path/to/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        body, html {
            margin: 0 !important;
            padding: 0 !important
        }

        .search-bar {
            position: relative;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(255, 255, 255, 0.9);
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 80%; /* Adjust width as necessary */
        }

            .search-bar .form-control {
                margin-bottom: 10px;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004a99;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

        .featured-services {
            padding: 4rem 0;
            background-color: #ffffff;
        }

            .featured-services h2 {
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 2rem;
                color: #007bff;
            }

            .featured-services .card {
                border: none;
                border-radius: 15px;
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
                transition: all 0.3s ease;
                overflow: hidden;
            }

                .featured-services .card:hover {
                    transform: translateY(-0.5rem);
                    box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.2);
                }

            .featured-services .card-title {
                font-size: 1.5rem;
                font-weight: bold;
                color: #007bff;
            }

            .featured-services .card-text {
                font-size: 1.1rem;
                color: #6c757d;
            }

        .py-5 {
            padding: 4rem 0;
            background-color: #ffffff;
        }

            .py-5 h2 {
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 2rem;
                color: #007bff;
            }

            .py-5 .card {
                border: none;
                border-radius: 15px;
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
                transition: all 0.3s ease;
                overflow: hidden;
            }

                .py-5 .card:hover {
                    transform: translateY(-0.5rem);
                    box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.2);
                }

            .py-5 .card-title {
                font-size: 1.5rem;
                font-weight: bold;
                color: #007bff;
            }

            .py-5 .card-text {
                font-size: 1.1rem;
                color: #6c757d;
            }

        .carousel-item img {
            width: 100vw;
            height: 430px;
            object-fit: cover;
        }

        .carousel-caption {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 20px;
            border-radius: 10px;
        }

        .testimonials {
            background-color: #f1f8ff;
            padding: 4rem 0;
        }

        .testimonial-card {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .testimonial-card img {
                border-radius: 50%;
                width: 80px;
                height: 80px;
                object-fit: cover;
                margin-bottom: 15px;
            }

            .testimonial-card h5 {
                margin-top: 10px;
                margin-bottom: 15px;
                font-weight: bold;
            }

            .testimonial-card p {
                font-style: italic;
                color: #555;
            }

    </style>
</head>

<!-- Carousel Section -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="./OIP1.jpg" alt="Luxury Hotel">
            <div class="carousel-caption d-none d-md-block">
                <h5>Luxury Accommodations</h5>
                <p>Experience comfort and elegance in our handpicked hotels</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="./OIP.jpg" alt="City Tour">
            <div class="carousel-caption d-none d-md-block">
                <h5>Exciting City Tours</h5>
                <p>Explore vibrant cities with our guided tours</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="./OIP3.jpg" alt="Transportation">
            <div class="carousel-caption d-none d-md-block">
                <h5>Reliable Transportation</h5>
                <p>Travel with ease using our cab services</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="./OIP2.jpg" alt="Transportation">
            <div class="carousel-caption d-none d-md-block">
                <h5>Reliable Transportation</h5>
                <p>Travel with ease using our cab services</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" data-target="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" data-target="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="search-bar">
    <form>
        <div class="row g-2">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Where are you going?">
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control" placeholder="Check-in Date">
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control" placeholder="Check-out Date">
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control" placeholder="Guests">
            </div>
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>
</div>




<!-- Featured Services Section -->
<section id="services" class="featured-services">
    <div class="container">
        <h2 class="text-center mb-5">Our Featured Services</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column">
                        <i class="fas fa-hotel fa-3x mb-3 "></i>
                        <h5 class="card-title">Hotels</h5>
                        <p class="card-text flex-grow-1">Find and book hotels that match your preferences. From luxury resorts to cozy B&Bs, we've got you covered.</p>
                        <a href="#" class="btn btn-primary mt-auto">Search Hotels</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column">
                        <i class="fas fa-taxi fa-3x mb-3 "></i>
                        <h5 class="card-title">Cabs</h5>
                        <p class="card-text flex-grow-1">Reserve cabs for easy transportation during your trip. Enjoy comfortable rides with our reliable cab services.</p>
                        <a href="#" class="btn btn-primary mt-auto">Book Cabs</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column">
                        <i class="fas fa-user fa-3x mb-3"></i>
                        <h5 class="card-title">Register Hotels & Cabs</h5>
                        <p class="card-text flex-grow-1">Are you a hotel owner or cab service provider? Register your business with us to reach more customers.</p>
                        <a href="/RegisterAgent" class="btn btn-primary mt-auto">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recommended Hotels Section -->
<section id="recommended-hotels" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Recommended Hotels</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="./image1.jpg" class="card-img-top" alt="Hotel 1">
                    <div class="card-body">
                        <h5 class="card-title">Hotel Paradise</h5>
                        <p class="card-text">A luxurious stay in the heart of the city & spend time</p>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-map-marker-alt mr-2"></i>
                            <span>Bangalore, IND</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="./image4.jpg" class="card-img-top" alt="Hotel 2">
                    <div class="card-body">
                        <h5 class="card-title">Seaside Resort</h5>
                        <p class="card-text">Relax and unwind by the beach.</p>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-map-marker-alt mr-2"></i>
                            <span>Delhi, IND</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="./image2.jpg" class="card-img-top" alt="Hotel 3">
                    <div class="card-body">
                        <h5 class="card-title">Mountain Lodge</h5>
                        <p class="card-text">Enjoy views from the comfort room.</p>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-map-marker-alt mr-2"></i>
                            <span>Chennai, IND</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
