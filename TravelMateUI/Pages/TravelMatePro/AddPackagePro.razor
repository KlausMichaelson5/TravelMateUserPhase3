@page "/AddPackagePro"
@using TravelMate2.Services
@using TravelMateUI.Models
@using TravelMateUI.Services
@inject IPackageProUIService PackageService
@inject NavigationManager Navigation

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-top: 2rem;
        background-color: #f8f9fa;
    }

    h3 {
        text-align: center;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 50px;
        padding: 0.75rem 1.25rem;
        font-size: 1rem;
    }

        .form-control::placeholder {
            font-style: italic;
            color: #6c757d;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 50px;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-secondary {
        border-radius: 50px;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        width: 100%;
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .card-body {
        background-color: white;
        border-radius: 15px;
        padding: 2rem;
    }
</style>

<h3>Add New Package</h3>

<div class="container">
    <div class="card">
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="packageServices">Hotel Name</label>
<textarea class="form-control" id="packageServices" @bind="newPackage.IncludedCabs" placeholder="Enter Hotel Name"></textarea>
                </div>
                <div class="form-group">
                    <label for="packageName">Package Name</label>
                    <input type="text" class="form-control" id="packageName" @bind="newPackage.PackageName" placeholder="Enter package name">
                </div>
                <div class="form-group">
                    <label for="packageDescription">Description</label>
<textarea class="form-control" id="packageDescription" @bind="newPackage.PackageDescription" placeholder="Enter description"></textarea>
                </div>
                <div class="form-group">
                    <label for="packagePrice">Price</label>
                    <input min="0" type="number" class="form-control" id="packagePrice" @bind="newPackage.Price" placeholder="Enter price">
                </div>
                <div class="form-group">
                    <label for="packageDuration">Available Dates</label>
                    <input type="date" class="form-control" id="datePicker" @bind="newPackage.AvailableDates" placeholder="Enter price">
                </div>
                <div class="form-group">
                    <label for="packageAmenities">Amenities (Add comma-separated values)</label>
<textarea class="form-control" id="packageAmenities" @bind="newPackage.Amenities" placeholder="Enter amenities"></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary" @onclick="AddPackage">Save Package</button>
                    </div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@code {
    private PackagePro newPackage = new PackagePro();

    private async Task AddPackage()
    {
        await PackageService.Add(newPackage);
        Navigation.NavigateTo("/Pro"); // Redirect back to the packages list page
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/Pro"); // Redirect back to the packages list page
    }
}