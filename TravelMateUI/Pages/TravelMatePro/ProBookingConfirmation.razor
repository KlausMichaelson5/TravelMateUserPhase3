@page "/BookingConfirmation"
@inject NavigationManager Navigation

@code {
    [Parameter] public int PackageId { get; set; }
    [Parameter] public string Name { get; set; }
    [Parameter] public decimal Price { get; set; }
    [Parameter] public string Dates { get; set; }

    private string ConfirmationMessage { get; set; }

    protected override void OnParametersSet()
    {
        ConfirmationMessage = $"You have successfully booked the package ";
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/Pro");
    }
}

<style>
    .confirmation-card {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        text-align: center;
        margin: 2rem auto;
        max-width: 600px;
    }

        .confirmation-card h3 {
            color: #28a745;
        }

    .btn-back {
        background: #007bff;
        color: white;
        border-radius: 50px;
        padding: 10px 20px;
        font-size: 1.1rem;
    }

        .btn-back:hover {
            background: #0056b3;
        }
</style>

<div class="confirmation-card">
    <h3>Booking Confirmed!</h3>
    <div>@((MarkupString)ConfirmationMessage)</div>
    <button class="btn btn-back mt-4" @onclick="GoBack">Back to Packages</button>
</div>


