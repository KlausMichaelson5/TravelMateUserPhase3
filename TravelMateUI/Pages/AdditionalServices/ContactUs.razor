@page "/ContactUs"
@inject NavigationManager Navigation

<br />
<br />
<br />
<div class="contact-details">
    <h2 class="text-center">@OrganizationName</h2>

    <div class="contact-item">
        <strong>Phone:</strong> <a href="tel:@PhoneNumber">@PhoneNumber</a>
        <button @onclick="CallPhone">Call Now</button>
    </div>

    <div class="contact-item">
        <strong>Email:</strong> <a href="mailto:@EmailAddress">@EmailAddress</a>
        <button @onclick="SendEmail">Send Email</button>
    </div>

    <div class="contact-item">
        <strong>Address:</strong> <span>@Address</span>
    </div>

    <div class="contact-item">
        <button @onclick="GoBack">Back</button>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f4f8;
    }

    .contact-details {
        padding: 25px;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        max-width: 450px;
        margin: 50px auto;
        background-color: #b3e0ff; /* Changed to light blue */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .contact-details:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .contact-item {
        margin-bottom: 20px;
    }

        .contact-item strong {
            display: block;
            font-size: 1.1rem;
            color: #555;
        }

        .contact-item a {
            text-decoration: none;
            color: #007BFF;
            font-size: 1.2rem;
        }

            .contact-item a:hover {
                text-decoration: underline;
                color: #0056b3;
            }

    button {
        margin-top: 8px;
        padding: 7px 14px;
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
        background-image: linear-gradient(135deg, #89f7fe 10%, #66a6ff 100%);
    }

        button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
            background-image: linear-gradient(135deg, #6dd5ed 10%, #2193b0 100%);
        }

    /* Media query for smaller screens */
    .media only screen and (max-width: 480px) {
        .contact-details

    {
        padding: 20px;
        margin: 20px;
        max-width: 100%;
    }

    .text-center {
        font-size: 1.5rem;
    }

    .contact-item {
        margin-bottom: 15px;
    }

        .contact-item a {
            font-size: 1rem;
        }

    button {
        padding: 6px 12px;
        font-size: 0.9rem;
    }

    }
</style>

@code
{
    [Parameter]
    public string OrganizationName { get; set; } = "TravelMate Help";

    [Parameter]
    public string PhoneNumber { get; set; } = "+1 (123) 456-7890";

    [Parameter]
    public string EmailAddress { get; set; } = "help-TravelMate@gmail.com";

    [Parameter]
    public string Address { get; set; } = "123 WhiteField, Bangalore, Karnataka, 560078";

    private void CallPhone()
    {
        // Logic to initiate a phone call
        Console.WriteLine($"Calling {PhoneNumber}...");
    }

    private void SendEmail()
    {
        // Logic to send an email
        Console.WriteLine($"Sending email to {EmailAddress}...");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}
